{
  "name": "solid-chrome-extension-template",
  "displayName": "Solid Chrome Extension Template",
  "version": "0.202212.1",
  "description": "Chrome Extension boilerplate with SolidJS + Vite + ManifestV3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fuyutarow/solid-chrome-extension-template.git"
  },
  "scripts": {
    "dev": "vite build -w",
    "build": "vite build",
    "lint": "eslint . --fix -c .eslintrc --ext js,ts,tsx,jsx --ignore-pattern='!.*'",
    "dev:nodemon": "nodemon",
    "build:noemit": "tsc --noEmit && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prettier": "prettier --write ."
  },
  "type": "module",
  "dependencies": {
    "solid-js": "^1.9.4"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.21",
    "@types/chrome": "0.0.299",
    "@types/jest": "^29.5.1",
    "@types/node": "20.1.2",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "@vitest/coverage-c8": "^0.31.0",
    "autoprefixer": "^10.4.16",
    "babel-preset-solid": "^1.7.4",
    "eslint": "8.40.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-solid": "^0.12.1",
    "eslint-plugin-tailwindcss": "^3.11.0",
    "fs-extra": "11.1.1",
    "jsdom": "^22.0.0",
    "nodemon": "3.1.9",
    "postcss": "^8.4.32",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "sass": "1.62.1",
    "tailwindcss": "^3.4.17",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "vite": "4.3.5",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^0.31.0"
  }
}
